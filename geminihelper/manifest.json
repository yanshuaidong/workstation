{
  "manifest_version": 3,
  "name": "Gemini 自动提问助手",
  "version": "1.0",
  "description": "在 Gemini 页面自动填入问题并发送",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png", 
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}